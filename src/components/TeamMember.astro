---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	name: string;
	role: string;
	xHandle: string;
	xUrl: string;
	avatar: ImageMetadata;
	color: 'pink' | 'purple';
}

const { name, role, xHandle, xUrl, avatar, color = 'pink' } = Astro.props;
const bgColor = color === 'pink' ? 'bg-vivi-pink-100 border-vivi-pink-200 text-vivi-pink-700' : 'bg-vivi-purple-100 border-vivi-purple-200 text-vivi-purple-700';
const ringColor = color === 'pink' ? 'ring-vivi-pink-500' : 'ring-vivi-purple-500';
---

<div class={`p-6 ${bgColor} rounded-xl border-2 gap-2`}>
	<div class="flex flex-row items-center gap-4">
		<Image class={`w-10 h-10 rounded-full ring-2 ${ringColor}`} src={avatar} alt={name} width={80} height={80} />
		<h3 class="font-bold text-lg flex items-center mb-0">{name}</h3>
	</div>
	<br />
	<div class="flex flex-row place-items-stretch justify-between gap-2">
		<span class={`inline-block px-3 py-1 mb-3 rounded-full text-white text-xs font-semibold ${color === 'pink' ? 'bg-vivi-pink-500' : 'bg-vivi-purple-500'}`}>
			{role}
		</span>
		<a
			href={xUrl}
			target="_blank"
			rel="noopener noreferrer"
			class="text-vivi-purple-600 hover:text-vivi-purple-700 text-sm font-medium"
		>
			@{xHandle} â†’
		</a>
	</div>
</div>
