---
interface Props {
	name: string;
	role: string;
	xHandle: string;
	xUrl: string;
	color?: 'pink' | 'purple';
}

const { name, role, xHandle, xUrl, color = 'pink' } = Astro.props;
const bgColor = color === 'pink' ? 'bg-vivi-pink-100 border-vivi-pink-200 text-vivi-pink-700' : 'bg-vivi-purple-100 border-vivi-purple-200 text-vivi-purple-700';
---

<div class={`p-6 ${bgColor} rounded-lg border-2`}>
	<h3 class="font-bold text-lg mb-2">{name}</h3>
	<p class="text-gray-700 mb-3">{role}</p>
	<a
		href={xUrl}
		target="_blank"
		rel="noopener noreferrer"
		class="text-vivi-purple-600 hover:text-vivi-purple-700 text-sm font-medium"
	>
		@{xHandle} â†’
	</a>
</div>

