---
import { Image, type ImageMetadata } from 'astro:assets';

interface Props {
	src: ImageMetadata;
	alt?: string;
	class?: string;
	width?: number;
	height?: number;
	rotation?: number;
}

const { src, alt = '', class: className = '', width = 100, height = 100, rotation = 0 } = Astro.props;
---

<div
	class={`sticker ${className}`}
	style={`--rotation: ${rotation}deg; transform: rotate(${rotation}deg);`}
>
	<Image src={src} alt={alt} width={width} height={height} />
</div>

<style>
	.sticker {
		position: absolute;
		pointer-events: none;
		z-index: 1;
		transition: transform 0.3s ease;
		opacity: 0.9;
	}

	@media (max-width: 640px) {
		.sticker {
			opacity: 0.7;
		}
	}

	.sticker:hover {
		transform: scale(1.1) rotate(var(--rotation, 0deg)) !important;
		opacity: 1;
	}
</style>
