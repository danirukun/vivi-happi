---
const timelineItems = [
	{
		title: 'Preorders Open',
		date: 'January 2026',
	},
	{
		title: 'Production',
		date: 'January - February 2026',
	},
	{
		title: 'Shipping',
		date: 'Before hololive 7th fes',
	},
];
---

<div class="max-w-4xl mx-auto">
	<h2 class="text-4xl font-bold font-yuruka text-center mb-12 text-vivi-pink-600">Timeline</h2>
	<div class="flex justify-center">
		<ol class="relative border-s border-vivi-pink-300">
			{timelineItems.map((item, index) => (
				<li class="mb-10 ms-6">
					<span class={`absolute flex items-center justify-center w-6 h-6 ${index % 2 === 0 ? 'bg-vivi-pink-500' : 'bg-vivi-purple-500'} rounded-full -start-3 ring-4 ring-white`}>
					</span>
					<h3 class="flex items-center mb-1 text-lg font-semibold text-vivi-pink-700">{item.title}</h3>
					<time class="block mb-2 text-sm font-normal leading-none text-gray-700">{item.date}</time>
				</li>
			))}
		</ol>
	</div>
</div>
