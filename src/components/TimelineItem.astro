---
interface Props {
	title: string;
	date: string;
	subtitle?: string;
	side?: 'left' | 'right';
	color?: 'pink' | 'purple';
}

const { title, date, subtitle, side = 'left', color = 'pink' } = Astro.props;
const isLeft = side === 'left';
const bgColor = color === 'pink' ? 'bg-vivi-pink-100 border-vivi-pink-300 text-vivi-pink-700' : 'bg-vivi-purple-100 border-vivi-purple-300 text-vivi-purple-700';
const dotColor = color === 'pink' ? 'bg-vivi-pink-500' : 'bg-vivi-purple-500';
---

<div class="relative flex flex-col md:flex-row items-center">
	{isLeft ? (
		<>
			<div class="md:w-1/2 md:pr-8 text-right">
				<div class={`inline-block p-6 ${bgColor} rounded-lg border-2`}>
					<h3 class="font-bold text-lg mb-2">{title}</h3>
					<p class="text-gray-700">{date}</p>
					{subtitle && <p class="text-sm text-gray-600 mt-1">{subtitle}</p>}
				</div>
			</div>
			<div class={`absolute left-1/2 transform -translate-x-1/2 w-4 h-4 ${dotColor} rounded-full border-4 border-white z-10`}></div>
			<div class="md:w-1/2 md:pl-8"></div>
		</>
	) : (
		<>
			<div class="md:w-1/2 md:pr-8"></div>
			<div class={`absolute left-1/2 transform -translate-x-1/2 w-4 h-4 ${dotColor} rounded-full border-4 border-white z-10`}></div>
			<div class="md:w-1/2 md:pl-8">
				<div class={`inline-block p-6 ${bgColor} rounded-lg border-2`}>
					<h3 class="font-bold text-lg mb-2">{title}</h3>
					<p class="text-gray-700">{date}</p>
					{subtitle && <p class="text-sm text-gray-600 mt-1">{subtitle}</p>}
				</div>
			</div>
		</>
	)}
</div>

