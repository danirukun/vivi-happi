---
import { Image } from 'astro:assets';
import oshimoshiLogo from '../images/Oshimoshi-Logo.png';
---

<section id="preorder" class="py-16 px-4 sm:px-6 lg:px-8">
	<div class="max-w-3xl mx-auto text-center text-vivi-purple-800">
		<h2 class="text-4xl font-bold font-yuruka mb-4">Ready to Preorder?</h2>
		<p class="text-xl tracking-wide mb-8 opacity-90">Preorders open in <span class="font-bold text-vivi-purple-600">January 2026</span></p>
		<a
			href="/preorder"
			aria-label="Sign up for preorder updates"
			class="inline-block px-8 py-4 bg-vivi-purple-900 text-vivi-pink-50 rounded-full font-bold text-lg hover:bg-vivi-purple-800 transition-colors"
		>
			Sign Up for Updates
		</a>
		<div class="mt-8">
			<a href="https://oshimoshi.shop/" target="_blank" rel="noopener noreferrer">
				<Image src={oshimoshiLogo} alt="Oshi Moshi - Distribution Partner" width={150} height={75} class="mx-auto" />
			</a>
		</div>
	</div>
</section>

