---
import FAQItem from './FAQItem.astro';

export interface FAQ {
	question: string;
	answer: string;
}

interface Props {
	faqs: FAQ[];
	title?: string;
	background?: string;
}

const { faqs, title, background = 'bg-vivi-pink-200' } = Astro.props;
const isJapanese = Astro.currentLocale === 'ja';
const faqTitle = title ?? (isJapanese ? 'よくある質問' : 'FAQ');
---

<section class="py-16 px-4 sm:px-6 lg:px-8">
	<div class="max-w-3xl mx-auto">
		<h2 class="text-4xl font-bold font-yuruka text-center mb-12 text-vivi-purple-600">{faqTitle}</h2>
		<div class="space-y-6">
			{faqs.map((faq) => (
				<FAQItem question={faq.question} answer={faq.answer} />
			))}
		</div>
	</div>
</section>

