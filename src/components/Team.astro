---
import TeamMember from './TeamMember.astro';

interface Props {
	background?: string;
}

const teamMembers = [
	{ name: 'danirukun', role: 'Project Lead', xHandle: 'danirukun', xUrl: 'https://x.com/danirukun', color: 'pink', avatarUrl: 'https://pbs.twimg.com/profile_images/1830747292942356480/lh4BGGpr_400x400.jpg' as const },
	{ name: 'Cloverclub', role: 'Consultant', xHandle: 'cloverclubcos', xUrl: 'https://x.com/cloverclubcos', color: 'purple', avatarUrl: 'https://pbs.twimg.com/profile_images/1922827396857606145/nM9nul4b_400x400.jpg' as const },
	{ name: 'ArtElphe', role: 'Artist', xHandle: 'ArtElphe', xUrl: 'https://x.com/ArtElphe', color: 'pink', avatarUrl: 'https://pbs.twimg.com/profile_images/1579927174043553792/n3QhY1WH_400x400.jpg' as const },
	{ name: 'Zach', role: 'Translator', xHandle: 'slaphappypuppy1', xUrl: 'https://x.com/slaphappypuppy1', color: 'purple', avatarUrl: 'https://pbs.twimg.com/profile_images/1938800423789367297/RkOGJqIP_400x400.jpg' as const },
	{ name: 'Ghostbyun', role: 'Design', xHandle: 'ghosttbyun', xUrl: 'https://x.com/ghosttbyun', color: 'pink', avatarUrl: 'https://pbs.twimg.com/profile_images/1910994752159252480/FPtBZn7A_400x400.jpg' as const },
	{ name: '苺大福', role: 'Artist', xHandle: 'il_ichi05', xUrl: 'https://x.com/il_ichi05', color: 'purple', avatarUrl: 'https://pbs.twimg.com/profile_images/1910224157746544640/bwgg1i4r_400x400.jpg' as const },
	{ name: 'Aisu Asai', role: 'Design', xHandle: 'AisuAsai', xUrl: 'https://x.com/AisuAsai', color: 'pink', avatarUrl: 'https://pbs.twimg.com/profile_images/1907331163271925761/ooKz6hKA_400x400.jpg' as const },
];
---

<section class="py-16 px-4 sm:px-6 lg:px-8">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-4xl font-bold font-moco text-center mb-12 text-vivi-pink-600">Team</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{teamMembers.map((member) => (
				<TeamMember
					name={member.name}
					role={member.role}
					xHandle={member.xHandle}
					xUrl={member.xUrl}
					avatarUrl={member.avatarUrl}
					color={member.color as 'pink' | 'purple'}
				/>
			))}
		</div>
	</div>
</section>

