---
import TeamMember from './TeamMember.astro';

export interface TeamMemberData {
	name: string;
	role: string;
	xHandle: string;
	xUrl: string;
	avatarUrl: string;
}

interface Props {
	members: TeamMemberData[];
	title?: string;
	background?: string;
}

const { members: teamMembers, title } = Astro.props;
const isJapanese = Astro.currentLocale === 'ja';
const teamTitle = title ?? (isJapanese ? 'チーム' : 'Team');
---

<section class="py-16 px-4 sm:px-6 lg:px-8">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-4xl font-bold font-yuruka text-center mb-12 text-vivi-pink-600">{teamTitle}</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{teamMembers.map((member, index) => (
				<TeamMember
					name={member.name}
					role={member.role}
					xHandle={member.xHandle}
					xUrl={member.xUrl}
					avatarUrl={member.avatarUrl}
					color={index % 2 === 0 ? 'purple' : 'pink'}
				/>
			))}
		</div>
	</div>
</section>

