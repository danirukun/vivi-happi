---

export interface Product {
	name: string;
	description: string;
	variant: 'A' | 'B';
}

interface Props {
	description: string;
	products: Product[];
}

const { description = 'Something about the project', products = [] } = Astro.props;
---

<div class="max-w-3xl mx-auto text-center">
	<h2 class="text-4xl font-yuruka text-vivi-pink-600 mb-6">About the project</h2>
	<div class="space-y-4 text-lg text-gray-700">
		<p>{description}</p>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
			{products.map((product) => (
				<div class={`p-4 rounded-lg ${product.variant === 'A' ? 'bg-vivi-pink-50' : 'bg-vivi-purple-50'}`}>
					<p class={`font-semibold ${product.variant === 'A' ? 'text-vivi-pink-700' : 'text-vivi-purple-700'}`}>{product.name}</p>
					<p class="text-sm text-gray-600 mt-1">{product.description}</p>
				</div>
			))}
		</div>
	</div>
</div>
