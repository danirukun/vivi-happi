---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
---

<Layout title="Updates - Vivi Happi Project" description="Latest updates on the Kikirara Vivi Happi project.">
	<Header background="bg-vivi-purple-900/95" />
	
	<main>
		<Hero variant="primary" padding="py-32">
			<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h1 class="text-4xl md:text-6xl font-bold font-yuruka text-vivi-purple-900 mb-8">Coming Soon!</h1>
				<p class="text-xl text-vivi-purple-700">We're working on bringing you the latest updates. Stay tuned!</p>
			</div>
		</Hero>
	</main>

	<Footer />
</Layout>
