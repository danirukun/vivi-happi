---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import { Image } from 'astro:assets';
import oshimoshiLogo from '../images/Oshimoshi-Logo.png';
---

<Layout title="Preorder - Vivi Happi Project" description="Preorder your Kikirara Vivi Happi coat from Oshi Moshi. Preorders are now open!">
	<Header background="bg-vivi-purple-900/95" />
	
	<main>
		<Hero variant="primary" padding="py-16">
			<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-8">
					<h1 class="text-4xl md:text-5xl font-bold font-yuruka text-vivi-purple-900 mb-4">Preorders Are Open!</h1>
					<p class="text-xl text-vivi-purple-700 mb-8">Order your happi now on Oshi Moshi</p>
				</div>

				<div class="text-center">
					<a
						href="https://oshimoshi.shop/"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-block px-8 py-4 bg-vivi-purple-900 text-vivi-pink-50 rounded-full font-bold text-lg hover:bg-vivi-purple-800 transition-colors mb-8"
					>
						Order on Oshi Moshi
					</a>
					<div>
						<a href="https://oshimoshi.shop/" target="_blank" rel="noopener noreferrer">
							<Image src={oshimoshiLogo} alt="Oshi Moshi - Distribution Partner" width={150} height={75} class="mx-auto" />
						</a>
					</div>
				</div>
			</div>
	</Hero>
</main>

<Footer />
</Layout>
