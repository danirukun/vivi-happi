---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import ProductInfo from '../components/ProductInfo.astro';
import StayUpdated from '../components/StayUpdated.astro';
import FlowbiteTimeline from '../components/FlowbiteTimeline.astro';
import FAQ from '../components/FAQ.astro';
import Team from '../components/Team.astro';
import PreorderCTA from '../components/PreorderCTA.astro';
import Footer from '../components/Footer.astro';
import Sticker from '../components/Sticker.astro';
import stickerHearts from '../images/sticker-hearts.png';
import stickerLipstick from '../images/sticker-lipstick.png';
import stickerMirror from '../images/sticker-mirror.png';
import stickerSparkles from '../images/sticker-sparkles.png';
import stickerCross from '../images/sticker-cross.png';
import viviHappiImage from '../images/vivi-happi-preview-final-watermarked.png';

import type { Product } from '../components/ProductInfo.astro';

const products: Product[] = [
	{ name: 'Made to Order', description: 'Manufactured on demand', variant: 'A' },
	{ name: 'Single Size', description: 'One size fits all', variant: 'B' },
	{ name: 'Includes Belt', description: 'Complete set', variant: 'A' },
];
---

<Layout ogImage={viviHappiImage}>
	<Header background="bg-vivi-purple-900/95" />

	<main class="relative">
		<h1 class="sr-only">Kikirara Vivi (綺々羅々ヴィヴィ) Happi - Hololive 7th Fes Ridin on Dreams & Super Expo 2026</h1>
		<Hero variant="primary">
			<Sticker
				src={stickerSparkles}
				alt=""
				width={120}
				height={120}
				rotation={-15}
				class="top-4 right-4 md:top-8 md:right-8 lg:top-12 lg:right-12"
			/>
			<Sticker
				src={stickerHearts}
				alt=""
				width={100}
				height={100}
				rotation={20}
				class="bottom-4 left-4 md:bottom-8 md:left-8 lg:bottom-12 lg:left-12"
			/>
			<HeroCarousel />
		</Hero>
		<Hero variant="secondary">
			<Sticker
				src={stickerLipstick}
				alt=""
				width={90}
				height={90}
				rotation={-25}
				class="top-4 left-4 md:top-6 md:left-6"
			/>
			<Sticker
				src={stickerMirror}
				alt=""
				width={110}
				height={110}
				rotation={15}
				class="bottom-4 right-4 md:bottom-6 md:right-6"
			/>
			<ProductInfo products={products} description="We as fans have come together to create a special project for Kikirara Vivi (綺々羅々ヴィヴィ) and her debut at hololive 7th fes - Ridin on Dreams and Super Expo 2026! With this beautiful, vibrant and sparkly happi (just like Vivi herself), you can show off your support for her!" />
		</Hero>
		<Hero variant="primary">
			<Sticker
				src={stickerMirror}
				alt=""
				width={85}
				height={85}
				rotation={25}
				class="top-4 left-4 md:top-8 md:left-8"
			/>
			<Sticker
				src={stickerLipstick}
				alt=""
				width={105}
				height={105}
				rotation={-15}
				class="bottom-4 right-4 md:bottom-8 md:right-8"
			/>
			<FAQ />
		</Hero>
		<Hero variant="secondary">
			<Sticker
				src={stickerSparkles}
				alt=""
				width={110}
				height={110}
				rotation={20}
				class="top-6 right-6 md:bottom-10 md:right-1/4 xl:top-2/3 xl:right-10"
			/>
			<Team />
		</Hero>
		<Hero variant="primary" padding="py-16">
			<Sticker
				src={stickerCross}
				alt=""
				width={80}
				height={80}
				rotation={30}
				class="top-8 right-8 md:right-1/3 xl:right-10"
			/>
			<Sticker
				src={stickerSparkles}
				alt=""
				width={100}
				height={100}
				rotation={-20}
				class="bottom-8 left-8 md:bottom-1/4 md:left-12"
			/>
			<StayUpdated />
		</Hero>
		<Hero variant="secondary">
			<Sticker
				src={stickerHearts}
				alt=""
				width={95}
				height={95}
				rotation={-10}
				class="top-6 right-6 md:top-10 md:right-10"
			/>
			<FlowbiteTimeline />
		</Hero>
		<Hero variant="primary">
			<Sticker
				src={stickerCross}
				alt=""
				width={90}
				height={90}
				rotation={-30}
				class="top-4 right-4 md:top-8 md:right-8"
			/>
			<Sticker
				src={stickerHearts}
				alt=""
				width={115}
				height={115}
				rotation={18}
				class="bottom-4 left-4 md:bottom-8 md:left-8"
			/>
			<PreorderCTA />
		</Hero>
	</main>

	<Footer />
</Layout>
