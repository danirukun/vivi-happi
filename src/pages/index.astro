---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import ProductCarousel from '../components/ProductCarousel.astro';
import ProductInfo from '../components/ProductInfo.astro';
import StayUpdated from '../components/StayUpdated.astro';
import FlowbiteTimeline from '../components/FlowbiteTimeline.astro';
import FAQ from '../components/FAQ.astro';
import Team from '../components/Team.astro';
import PreorderCTA from '../components/PreorderCTA.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<Header background="bg-vivi-pink-200/95" />

	<main>
		<Hero variant="primary">
			<HeroCarousel />
		</Hero>
		<!-- <ProductCarousel background="bg-vivi-pink-200" /> -->
		<Hero variant="secondary">
			<ProductInfo />
		</Hero>
		<Hero variant="primary" padding="py-16">
			<StayUpdated />
		</Hero>
		<Hero variant="secondary">
			<FlowbiteTimeline />
		</Hero>
		<Hero variant="primary">
			<FAQ />
		</Hero>
		<Hero variant="secondary">
			<Team />
		</Hero>
		<Hero variant="primary">
			<PreorderCTA />
		</Hero>
	</main>

	<Footer />
</Layout>
