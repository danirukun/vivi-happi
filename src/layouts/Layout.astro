---
import '../styles/global.css';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
	title?: string;
	description?: string;
}

const currentLocale = Astro.currentLocale ?? 'en';
const isJapanese = currentLocale === 'ja';

const defaultTitle = isJapanese ? '綺々羅々ヴィヴィ 法被' : 'Kikirara Vivi (綺々羅々ヴィヴィ) Happi';
const defaultDescription = isJapanese 
	? '綺々羅々ヴィヴィの法被プロジェクト。hololive 7th fes - Ridin on DreamsとSuper Expo 2026に向けて。受注生産、世界中に発送。'
	: 'Kikirara Vivi (綺々羅々ヴィヴィ) Happi coat project for hololive 7th fes and Super Expo 2026 - Ridin on Dreams. Made to order, worldwide shipping.';

const { 
	title = defaultTitle,
	description = defaultDescription,
} = Astro.props;

const keywords = 'hololive 7th fes, super expo 2026, ridin on dreams, kikirara vivi, 綺々羅々ヴィヴィ, vivi happi, hololive merch, happi coat, holofes 7';

const siteUrl = Astro.site || 'https://vivi-happi.danirukun.com';
const ogImage = new URL('/og-image.png', siteUrl);
const ogImageAlt = title;
const ogLocale = isJapanese ? 'ja_JP' : 'en_US';
const ogLocaleAlternate = isJapanese ? 'en_US' : 'ja_JP';

const currentPathname = Astro.url.pathname;
let localeAgnosticPath = currentPathname;

if (localeAgnosticPath.startsWith('/ja/')) {
	localeAgnosticPath = localeAgnosticPath.slice(4);
} else if (localeAgnosticPath === '/ja' || localeAgnosticPath === '/ja/') {
	localeAgnosticPath = '/';
}

if (localeAgnosticPath === '/') {
	localeAgnosticPath = '';
} else if (localeAgnosticPath.startsWith('/')) {
	localeAgnosticPath = localeAgnosticPath.slice(1);
}

const canonicalPath = getRelativeLocaleUrl(currentLocale, localeAgnosticPath);
const canonicalUrl = new URL(canonicalPath, siteUrl).href;
const alternateEnUrl = new URL(getRelativeLocaleUrl('en', localeAgnosticPath), siteUrl).href;
const alternateJaUrl = new URL(getRelativeLocaleUrl('ja', localeAgnosticPath), siteUrl).href;
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="preload" href="/fonts/fot-yuruka-std.otf" as="font" type="font/otf" crossorigin />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<link rel="canonical" href={canonicalUrl} />
		<link rel="alternate" hreflang="en" href={alternateEnUrl} />
		<link rel="alternate" hreflang="ja" href={alternateJaUrl} />
		<link rel="alternate" hreflang="x-default" href={alternateEnUrl} />
		<title>{title}</title>
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Product",
			"name": "Kikirara Vivi Happi Coat",
			"alternateName": "綺々羅々ヴィヴィ ハッピ",
			"description": description,
			"image": [ogImage.href],
			"brand": {
				"@type": "Brand",
				"name": "Kikirara Vivi"
			},
			"offers": {
				"@type": "Offer",
				"availability": "https://schema.org/PreOrder",
				"priceCurrency": "USD",
				"availabilityStarts": "2026-01-01"
			},
			"event": {
				"@type": "Event",
				"name": "hololive 7th fes - Ridin on Dreams",
				"alternateName": "Super Expo 2026",
				"startDate": "2026-03-01"
			}
		})} />
		<!-- Privacy-friendly analytics by Plausible -->
		<script async src="https://plausible.io/js/pa-t_V2ZdoTP7VbuYhSjj9w9.js"></script>
		<script>
			window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};
			plausible.init()
		</script>

		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage.href} />
		<meta property="og:image:alt" content={ogImageAlt} />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:image:width" content="1060" />
		<meta property="og:image:height" content="1058" />
		<meta property="og:locale" content={ogLocale} />
		<meta property="og:locale:alternate" content={ogLocaleAlternate} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalUrl} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage.href} />
		<meta name="twitter:image:alt" content={ogImageAlt} />
	</head>
	<body class="bg-vivi-pink-300 text-gray-900 font-sans">
		<slot />
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.3.0/dist/flowbite.min.js"></script>
	</body>
</html>

